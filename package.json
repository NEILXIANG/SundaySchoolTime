{
  "name": "sunday-school-time",
  "version": "1.0.0",
  "description": "教师学生图文分发工具 - Electron 桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "test": "npm run test:unit && npm run test:integration",
    "test:all": "mocha test/**/*.test.js --timeout 30000",
    "test:unit": "mocha test/db_helpers.test.js test/logger.test.js test/log-scripts.test.js --timeout 10000",
    "test:integration": "mocha test/integration.test.js test/boundary.test.js test/app.test.js --timeout 30000",
    "test:db": "mocha test/db_full_coverage.test.js --timeout 30000",
    "test:robustness": "mocha test/robustness.test.js --timeout 30000",
    "test:fast": "npm run test:unit && npm run test:db",
    "test:ui": "npm run test:integration",
    "test:watch": "mocha test/**/*.test.js --timeout 30000 --watch",
    "test:coverage": "nyc npm test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "logs": "node scripts/analyze-logs.js",
    "logs:query": "node scripts/query-logs.js",
    "logs:errors": "node scripts/query-logs.js --level=error",
    "logs:session": "node scripts/query-logs.js --session",
    "logs:open": "open ~/Library/Logs/SundaySchoolTime || explorer %USERPROFILE%\\AppData\\Roaming\\SundaySchoolTime\\logs || xdg-open ~/.config/SundaySchoolTime/logs"
  },
  "keywords": [
    "electron",
    "education",
    "sunday-school",
    "content-distribution"
  ],
  "author": {
    "name": "Neil Xiang",
    "email": "neil@example.com",
    "url": "https://github.com/NEILXIANG"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NEILXIANG/SundaySchoolTime.git"
  },
  "bugs": {
    "url": "https://github.com/NEILXIANG/SundaySchoolTime/issues"
  },
  "homepage": "https://github.com/NEILXIANG/SundaySchoolTime#readme",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.10",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.5",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "mime-types": "^3.0.2"
  },
  "build": {
    "appId": "com.neilxiang.sundayschooltime",
    "productName": "SundaySchoolTime",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!test",
      "!dist"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Education"
    },
    "publish": {
      "provider": "github",
      "owner": "NEILXIANG",
      "repo": "SundaySchoolTime"
    }
  }
}
