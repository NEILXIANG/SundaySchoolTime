{
  "name": "sunday-school-time",
  "version": "1.0.0",
  "description": "教师学生图文分发工具 - Electron 桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "test": "mocha test/**/*.test.js --timeout 30000",
    "test:watch": "mocha test/**/*.test.js --timeout 30000 --watch"
  },
  "keywords": [
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.10",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "mocha": "^10.2.0",
    "playwright": "^1.40.0"
  },
  "dependencies": {
    "electron-log": "^5.0.1"
  },
  "build": {
    "appId": "com.neilxiang.sundayschooltime",
    "productName": "SundaySchoolTime",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!test",
      "!node_modules",
      "!dist"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
